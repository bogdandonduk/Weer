<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomePageRl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcomePageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Слушай"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Слушай" />

    <TextView
        android:id="@+id/welcomePageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Всегда и везде"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/welcomePageTitle"
        app:layout_constraintStart_toStartOf="@+id/welcomePageTitle"
        app:layout_constraintTop_toBottomOf="@+id/welcomePageTitle"
        tools:text="Всегда и везде" />
</androidx.constraintlayout.widget.ConstraintLayout>